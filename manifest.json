{
  "name": "A browser action that sets WaterlooWorks links to open in new tab.",
  "description": "Fixes WaterlooWorks links",
  "version": "3.14159",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
      "default_title": "Fix WaterlooWorks.",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "content_scripts" : [
      {
        "js" : ["fixLinks.js"],
        "matches": ["*://*/*"]
      }
  ],
  "manifest_version": 2
}
